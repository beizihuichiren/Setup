@using Logistics.Api.Models.ViewModels
@model StationDashboardViewModel
@{ 
    Layout = "_LayoutStation"; 
    ViewData["Title"] = "站点工作台";    
}

<div class="container-fluid">
    <!-- 页面标题 -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">@* 站点工作台标题 *@ 站点工作台</h1>
            <p class="text-muted">@* 站点工作台描述 *@ 欢迎回来，@(User.Identity?.Name ?? "站点管理员")，查看今日站点运营情况</p>
        </div>
        <div class="col-auto">
            <div class="text-right">
                <span class="text-muted">@* 日期显示 *@ @DateTime.Now.ToString("yyyy年MM月dd日")</span>
            </div>
        </div>
    </div>
    
    <!-- 站点运营概览 -->
    <div class="row mb-4">
        <!-- 站点订单总量 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 订单总量标题 *@ 今日订单</h5>
                        <span class="bg-primary/10 text-primary p-2 rounded-lg">
                            <i class="fas fa-clipboard-list"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 订单总量 *@ 128</p>
                    <div class="text-sm text-success">
                        <i class="fas fa-arrow-up"></i> @* 订单增长率 *@ 12% 较昨日
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 低库存预警 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 低库存预警标题 *@ 低库存预警</h5>
                        <span class="bg-warning/10 text-warning p-2 rounded-lg">
                            <i class="fas fa-exclamation-triangle"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 低库存产品数 *@ 7</p>
                    <div class="text-sm text-warning">
                        @* 库存预警提示 *@ 需要及时补货
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 售后工单 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 售后工单标题 *@ 售后工单</h5>
                        <span class="bg-danger/10 text-danger p-2 rounded-lg">
                            <i class="fas fa-headset"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 待处理工单数量 *@ 15</p>
                    <div class="text-sm text-danger">
                        <i class="fas fa-clock"></i> @* 工单提醒 *@ 5个工单已超时
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 库存周转率 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 库存周转率标题 *@ 库存周转率</h5>
                        <span class="bg-info/10 text-info p-2 rounded-lg">
                            <i class="fas fa-sync-alt"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 周转率百分比 *@ 85%</p>
                    <div class="text-sm text-success">
                        <i class="fas fa-check"></i> @* 周转率提示 *@ 健康水平
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 主要内容区域 -->
    <div class="row">
        <!-- 左侧区域 -->
        <div class="col-lg-8 mb-4">
            <!-- 待处理订单列表 -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@* 待处理订单标题 *@ 待处理订单</h5>
                    <a asp-controller="Station" asp-action="Orders" class="text-primary text-sm">@* 查看全部订单 *@ 查看全部</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@* 订单号列标题 *@ 订单号</th>
                                    <th>@* 订单类型列标题 *@ 类型</th>
                                    <th>@* 配送状态列标题 *@ 状态</th>
                                    <th>@* 优先级列标题 *@ 优先级</th>
                                    <th>@* 到达时间列标题 *@ 预计到达</th>
                                    <th>@* 操作列标题 *@ 操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 订单列表行占位 -->
                                <tr>
                                    <td>@* 订单号占位 *@ #SORD-20240501-001</td>
                                    <td>@* 订单类型占位 *@ <span class="badge badge-info">中转</span></td>
                                    <td>@* 订单状态占位 *@ <span class="badge badge-warning">待处理</span></td>
                                    <td>@* 优先级占位 *@ <span class="badge badge-danger">高</span></td>
                                    <td>@* 到达时间占位 *@ 10:30</td>
                                    <td>
                                        <a asp-controller="Station" asp-action="OrderDetail" asp-route-id="SORD-20240501-001" class="btn btn-sm btn-primary">@* 处理按钮 *@ 处理</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>@* 订单号占位 *@ #SORD-20240501-002</td>
                                    <td>@* 订单类型占位 *@ <span class="badge badge-success">配送</span></td>
                                    <td>@* 订单状态占位 *@ <span class="badge badge-warning">待处理</span></td>
                                    <td>@* 优先级占位 *@ <span class="badge badge-warning">中</span></td>
                                    <td>@* 到达时间占位 *@ 11:00</td>
                                    <td>
                                        <a asp-controller="Station" asp-action="OrderDetail" asp-route-id="SORD-20240501-002" class="btn btn-sm btn-primary">@* 处理按钮 *@ 处理</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>@* 订单号占位 *@ #SORD-20240501-003</td>
                                    <td>@* 订单类型占位 *@ <span class="badge badge-primary">收件</span></td>
                                    <td>@* 订单状态占位 *@ <span class="badge badge-warning">待处理</span></td>
                                    <td>@* 优先级占位 *@ <span class="badge badge-secondary">低</span></td>
                                    <td>@* 到达时间占位 *@ 11:30</td>
                                    <td>
                                        <a asp-controller="Station" asp-action="OrderDetail" asp-route-id="SORD-20240501-003" class="btn btn-sm btn-primary">@* 处理按钮 *@ 处理</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- 站点运营趋势 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@* 运营趋势标题 *@ 本周运营趋势</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="height: 300px;">
                        <!-- 这里可以集成Chart.js或其他图表库 -->
                        <canvas id="operationTrendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 右侧区域 -->
        <div class="col-lg-4 mb-4">
            <!-- 低库存产品 -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@* 低库存产品标题 *@ 低库存产品</h5>
                    <a asp-controller="Station" asp-action="Inventory" class="text-primary text-sm">@* 查看全部库存 *@ 查看全部</a>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">@* 产品名称占位 *@ 电子产品A</h6>
                                <small class="text-muted">@* 产品编号占位 *@ SKU: E001 | @* 当前库存占位 *@ 库存: 3</small>
                            </div>
                            <span class="badge badge-danger">@* 库存状态占位 *@ 缺货</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">@* 产品名称占位 *@ 日用品B</h6>
                                <small class="text-muted">@* 产品编号占位 *@ SKU: D002 | @* 当前库存占位 *@ 库存: 8</small>
                            </div>
                            <span class="badge badge-warning">@* 库存状态占位 *@ 低库存</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">@* 产品名称占位 *@ 食品C</h6>
                                <small class="text-muted">@* 产品编号占位 *@ SKU: F003 | @* 当前库存占位 *@ 库存: 5</small>
                            </div>
                            <span class="badge badge-warning">@* 库存状态占位 *@ 低库存</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- 待处理售后工单 -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@* 售后工单标题 *@ 待处理售后工单</h5>
                    <a asp-controller="Station" asp-action="AfterSales" class="text-primary text-sm">@* 查看全部工单 *@ 查看全部</a>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-action bg-danger/5 border-left-4 border-danger">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">@* 工单号占位 *@ #AS-20240501-001</h6>
                                <span class="text-sm text-danger">@* 工单紧急度占位 *@ 紧急</span>
                            </div>
                            <p class="text-sm text-muted mb-1">@* 工单内容占位 *@ 产品损坏，需要紧急处理</p>
                            <a asp-controller="Station" asp-action="AfterSalesDetail" asp-route-id="AS-20240501-001" class="text-sm text-primary">@* 处理工单链接 *@ 处理</a>
                        </div>
                        <div class="list-group-item list-group-item-action bg-warning/5 border-left-4 border-warning">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">@* 工单号占位 *@ #AS-20240501-002</h6>
                                <span class="text-sm text-warning">@* 工单紧急度占位 *@ 普通</span>
                            </div>
                            <p class="text-sm text-muted mb-1">@* 工单内容占位 *@ 客户申请退款，等待审核</p>
                            <a asp-controller="Station" asp-action="AfterSalesDetail" asp-route-id="AS-20240501-002" class="text-sm text-primary">@* 处理工单链接 *@ 处理</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- 快捷操作 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@* 快捷操作标题 *@ 快捷操作</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Station" asp-action="Inventory" class="d-block text-center p-3 bg-primary/5 rounded-lg hover:bg-primary/10 transition-all">
                                <div class="text-primary mb-2">
                                    <i class="fas fa-boxes fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 库存管理链接 *@ 库存管理</h6>
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Station" asp-action="Orders" class="d-block text-center p-3 bg-info/5 rounded-lg hover:bg-info/10 transition-all">
                                <div class="text-info mb-2">
                                    <i class="fas fa-shipping-fast fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 订单管理链接 *@ 订单管理</h6>
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Station" asp-action="Products" class="d-block text-center p-3 bg-success/5 rounded-lg hover:bg-success/10 transition-all">
                                <div class="text-success mb-2">
                                    <i class="fas fa-tags fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 产品管理链接 *@ 产品管理</h6>
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Station" asp-action="AfterSales" class="d-block text-center p-3 bg-secondary/5 rounded-lg hover:bg-secondary/10 transition-all">
                                <div class="text-secondary mb-2">
                                    <i class="fas fa-headset fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 售后服务链接 *@ 售后服务</h6>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 运营趋势图表初始化脚本
    document.addEventListener('DOMContentLoaded', function() {
        // 这里可以添加Chart.js图表初始化代码
        console.log('@* 运营趋势图表初始化注释 *@ 运营趋势图表初始化');
    });
</script>