@model dynamic
@{    Layout = "~/Views/Shared/_LayoutStation.cshtml";
    ViewData["Title"] = "库存管理 - 站点工作台";
    ViewData["Breadcrumb"] = new List<object> {
        new { Text = "工作台", Url = "/Station/Index" },
        new { Text = "库存管理", Url = "/Station/Inventory", IsActive = true }
    };
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title">
                <h1>库存管理</h1>
                <p class="text-muted">@* 这里是站点库存管理页面，您可以添加库存列表、搜索、盘点等功能 *@</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>库存列表</h3>
        </div>
        <div class="col-md-6 text-right">
            <button class="btn btn-primary">@* 库存盘点按钮 *@ 库存盘点</button>
            <button class="btn btn-secondary ml-2">@* 导出报表按钮 *@ 导出报表</button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@* 搜索产品名称或编号 *@ 搜索产品名称/编号..." />
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 产品分类筛选 *@ 所有分类</option>
                        <option value="Electronics">电子产品</option>
                        <option value="Clothing">服装</option>
                        <option value="Food">食品</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 库存状态筛选 *@ 所有状态</option>
                        <option value="Low">库存偏低</option>
                        <option value="Normal">库存正常</option>
                        <option value="Excess">库存过剩</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">搜索</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 产品编号列 *@ 产品编号</th>
                        <th>@* 产品名称列 *@ 产品名称</th>
                        <th>@* 分类列 *@ 分类</th>
                        <th>@* 当前库存列 *@ 当前库存</th>
                        <th>@* 预警库存列 *@ 预警库存</th>
                        <th>@* 单位列 *@ 单位</th>
                        <th>@* 操作列 *@ 操作</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示库存数据，您可以使用foreach循环遍历库存列表 -->
                    <tr>
                        <td>@* 产品编号占位符 *@ P001</td>
                        <td>@* 产品名称占位符 *@ 智能手机</td>
                        <td>@* 分类占位符 *@ 电子产品</td>
                        <td class="text-warning">@* 库存数量占位符 *@ 15</td>
                        <td>@* 预警数量占位符 *@ 20</td>
                        <td>@* 单位占位符 *@ 台</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">详情</a>
                            <a href="#" class="btn btn-sm btn-success">入库</a>
                            <a href="#" class="btn btn-sm btn-warning">出库</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>