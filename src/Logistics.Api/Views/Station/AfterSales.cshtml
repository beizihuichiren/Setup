@model dynamic
@{    Layout = "~/Views/Shared/_LayoutStation.cshtml";
    ViewData["Title"] = "售后服务 - 站点工作台";
    ViewData["Breadcrumb"] = new List<object> {
        new { Text = "工作台", Url = "/Station/Index" },
        new { Text = "售后服务", Url = "/Station/AfterSales", IsActive = true }
    };
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title">
                <h1>售后服务</h1>
                <p class="text-muted">@* 这里是站点售后服务管理页面，您可以添加售后工单列表、搜索、处理等功能 *@</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>售后工单</h3>
        </div>
        <div class="col-md-6 text-right">
            <button class="btn btn-primary">@* 创建工单按钮 *@ 创建工单</button>
            <button class="btn btn-secondary ml-2">@* 导出报表按钮 *@ 导出报表</button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@* 搜索工单编号或客户信息 *@ 搜索工单/客户..." />
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 工单状态筛选 *@ 所有状态</option>
                        <option value="Pending">待处理</option>
                        <option value="Processing">处理中</option>
                        <option value="Completed">已完成</option>
                        <option value="Cancelled">已取消</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 售后类型筛选 *@ 所有类型</option>
                        <option value="Return">退货</option>
                        <option value="Exchange">换货</option>
                        <option value="Repair">维修</option>
                        <option value="Complaint">投诉</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">搜索</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 工单编号列 *@ 工单编号</th>
                        <th>@* 客户信息列 *@ 客户信息</th>
                        <th>@* 关联订单列 *@ 关联订单</th>
                        <th>@* 创建时间列 *@ 创建时间</th>
                        <th>@* 工单类型列 *@ 工单类型</th>
                        <th>@* 工单状态列 *@ 工单状态</th>
                        <th>@* 操作列 *@ 操作</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示售后工单数据，您可以使用foreach循环遍历工单列表 -->
                    <tr>
                        <td>@* 工单编号占位符 *@ AS20240101001</td>
                        <td>@* 客户信息占位符 *@ 张三 (138****1234)</td>
                        <td>@* 订单号占位符 *@ OD20240101001</td>
                        <td>@* 创建时间占位符 *@ 2024-01-01 14:30:00</td>
                        <td>@* 工单类型占位符 *@ 退货</td>
                        <td><span class="badge badge-warning">@* 状态占位符 *@ 待处理</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">详情</a>
                            <a href="#" class="btn btn-sm btn-success">处理</a>
                            <a href="#" class="btn btn-sm btn-info">沟通记录</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>