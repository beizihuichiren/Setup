@model dynamic
@{    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}

<h2>仓库管理</h2>
<p>@* 这里是仓库管理页面，您可以添加仓库列表、搜索、编辑等功能 *@</p>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>仓库列表</h3>
        </div>
        <div class="col-md-6 text-right">
            <button class="btn btn-primary">@* 添加仓库按钮 *@ 添加仓库</button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@* 搜索仓库名称或编号 *@ 搜索仓库名称/编号..." />
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 仓库类型筛选 *@ 所有类型</option>
                        <option value="Main">主仓库</option>
                        <option value="Branch">分支仓库</option>
                        <option value="Regional">区域仓库</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 仓库状态筛选 *@ 所有状态</option>
                        <option value="Active">活跃</option>
                        <option value="Inactive">关闭</option>
                        <option value="Maintenance">维护中</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">搜索</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 仓库编号列 *@ 仓库编号</th>
                        <th>@* 仓库名称列 *@ 仓库名称</th>
                        <th>@* 类型列 *@ 类型</th>
                        <th>@* 地址列 *@ 地址</th>
                        <th>@* 负责人列 *@ 负责人</th>
                        <th>@* 状态列 *@ 状态</th>
                        <th>@* 操作列 *@ 操作</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示仓库数据，您可以使用foreach循环遍历仓库列表 -->
                    <tr>
                        <td>@* 仓库编号占位符 *@ W001</td>
                        <td>@* 仓库名称占位符 *@ 上海主仓库</td>
                        <td>@* 类型占位符 *@ 主仓库</td>
                        <td>@* 地址占位符 *@ 上海市浦东新区张江高科技园区</td>
                        <td>@* 负责人占位符 *@ 张三</td>
                        <td>@* 状态占位符 *@ 活跃</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">编辑</a>
                            <a href="#" class="btn btn-sm btn-info">库存</a>
                            <a href="#" class="btn btn-sm btn-danger">删除</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>