@{ Layout = "_LayoutAdmin"; }

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-icon bg-danger text-white rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-shield-fill-exclamation text-4xl"></i>
            </div>
            <h1 class="display-4 font-bold text-danger mb-4">访问被拒绝</h1>
            <p class="lead text-gray-600 mb-6">您没有权限访问此页面。请检查您的账号权限或联系管理员。</p>
            
            <div class="d-flex justify-content-center gap-4">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a href="/Admin/Index" class="btn btn-primary btn-lg">返回管理首页</a>
                    <a href="/Admin/Logout" class="btn btn-outline-secondary btn-lg">退出登录</a>
                } else {
                    <a href="/Admin/Login" class="btn btn-primary btn-lg">返回登录</a>
                }
            </div>
        </div>
    </div>
</div>