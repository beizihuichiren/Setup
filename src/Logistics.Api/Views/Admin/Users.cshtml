@model dynamic
@{    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}

<h2>用户管理</h2>
<p>@* 这里是用户管理页面，您可以添加用户列表、搜索、编辑等功能 *@</p>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>用户列表</h3>
        </div>
        <div class="col-md-6 text-right">
            <button class="btn btn-primary">@* 添加用户按钮 *@ 添加用户</button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@* 搜索用户名 *@ 搜索用户名..." />
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 用户角色筛选 *@ 所有角色</option>
                        <option value="Admin">管理员</option>
                        <option value="Employee">员工</option>
                        <option value="Station">站点</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 用户状态筛选 *@ 所有状态</option>
                        <option value="Active">活跃</option>
                        <option value="Inactive">禁用</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">搜索</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 用户名列 *@ 用户名</th>
                        <th>@* 角色列 *@ 角色</th>
                        <th>@* 创建时间列 *@ 创建时间</th>
                        <th>@* 状态列 *@ 状态</th>
                        <th>@* 操作列 *@ 操作</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示用户数据，您可以使用foreach循环遍历用户列表 -->
                    <tr>
                        <td>@* 用户名占位符 *@ admin</td>
                        <td>@* 角色占位符 *@ 管理员</td>
                        <td>@* 时间占位符 *@ 2024-01-01</td>
                        <td>@* 状态占位符 *@ 活跃</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">编辑</a>
                            <a href="#" class="btn btn-sm btn-danger">删除</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>