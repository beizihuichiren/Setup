@model dynamic
@{    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "操作记录 - 员工工作台";
    ViewData["Breadcrumb"] = new List<object> {
        new { Text = "工作台", Url = "/Employee/Index" },
        new { Text = "操作记录", Url = "/Employee/Operations", IsActive = true }
    };
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title">
                <h1>操作记录</h1>
                <p class="text-muted">@* 这里是员工操作记录页面，您可以添加操作日志列表、搜索等功能 *@</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>我的操作记录</h3>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@* 搜索操作内容或订单号 *@ 搜索操作内容/订单号..." />
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 操作类型筛选 *@ 所有操作类型</option>
                        <option value="OrderProcess">订单处理</option>
                        <option value="ShipmentUpdate">发货更新</option>
                        <option value="StatusChange">状态变更</option>
                        <option value="InfoModify">信息修改</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="date" class="form-control" placeholder="@* 开始日期 *@ 开始日期" />
                        <div class="input-group-prepend">
                            <span class="input-group-text">至</span>
                        </div>
                        <input type="date" class="form-control" placeholder="@* 结束日期 *@ 结束日期" />
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">搜索</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 时间列 *@ 操作时间</th>
                        <th>@* 操作类型列 *@ 操作类型</th>
                        <th>@* 操作内容列 *@ 操作内容</th>
                        <th>@* 关联订单列 *@ 关联订单</th>
                        <th>@* 结果列 *@ 操作结果</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示操作记录数据，您可以使用foreach循环遍历记录列表 -->
                    <tr>
                        <td>@* 时间占位符 *@ 2024-01-01 14:30</td>
                        <td>@* 类型占位符 *@ 订单处理</td>
                        <td>@* 内容占位符 *@ 开始处理订单O20240101001</td>
                        <td>@* 订单占位符 *@ O20240101001</td>
                        <td><span class="badge badge-success">@* 结果占位符 *@ 成功</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>