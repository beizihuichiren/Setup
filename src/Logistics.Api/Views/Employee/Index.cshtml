@using Logistics.Api.Models.ViewModels
@model EmployeeDashboardViewModel
@{ 
    Layout = "_LayoutEmployee"; 
    ViewData["Title"] = "工作台";    
}

<div class="container-fluid">
    <!-- 页面标题 -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">@* 工作台标题 *@ 工作台</h1>
            <p class="text-muted">@* 工作台描述 *@ 欢迎回来，@(User.Identity?.Name ?? "员工")，查看您今天的任务和业绩</p>
        </div>
        <div class="col-auto">
            <div class="text-right">
                <span class="text-muted">@* 日期显示 *@ @DateTime.Now.ToString("yyyy年MM月dd日")</span>
            </div>
        </div>
    </div>
    
    <!-- 快捷统计 -->
    <div class="row mb-4">
        <!-- 待处理订单 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 待处理订单标题 *@ 待处理订单</h5>
                        <span class="bg-danger/10 text-danger p-2 rounded-lg">
                            <i class="fas fa-clock"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 待处理订单数量 *@ 5</p>
                    <div class="text-sm text-muted">
                        @* 待处理订单提示 *@ 需要立即处理
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 进行中订单 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 进行中订单标题 *@ 进行中订单</h5>
                        <span class="bg-warning/10 text-warning p-2 rounded-lg">
                            <i class="fas fa-spinner"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 进行中订单数量 *@ 12</p>
                    <div class="text-sm text-muted">
                        @* 进行中订单提示 *@ 正在配送中
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 今日完成订单 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 今日完成标题 *@ 今日完成</h5>
                        <span class="bg-success/10 text-success p-2 rounded-lg">
                            <i class="fas fa-check-circle"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 完成订单数量 *@ 8</p>
                    <div class="text-sm text-success">
                        <i class="fas fa-arrow-up"></i> @* 完成率提示 *@ 较昨日 +2
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 本月收益 -->
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">@* 本月收益标题 *@ 本月收益</h5>
                        <span class="bg-info/10 text-info p-2 rounded-lg">
                            <i class="fas fa-coins"></i>
                        </span>
                    </div>
                    <p class="card-text display-4 font-bold">@* 收益金额占位 *@ ¥3,580</p>
                    <div class="text-sm text-success">
                        <i class="fas fa-arrow-up"></i> @* 收益增长率 *@ 15% 较上月
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 近期订单和工作提醒 -->
    <div class="row">
        <!-- 近期订单 -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@* 近期订单标题 *@ 近期订单</h5>
                    <a asp-controller="Employee" asp-action="Orders" class="text-primary text-sm">@* 查看全部订单 *@ 查看全部</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@* 订单号列标题 *@ 订单号</th>
                                    <th>@* 客户信息列标题 *@ 客户信息</th>
                                    <th>@* 订单状态列标题 *@ 状态</th>
                                    <th>@* 配送地址列标题 *@ 配送地址</th>
                                    <th>@* 创建时间列标题 *@ 创建时间</th>
                                    <th>@* 操作列标题 *@ 操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 订单列表行占位 -->
                                <tr>
                                    <td>@* 订单号占位 *@ #ORD-20240501-001</td>
                                    <td>@* 客户信息占位 *@ 张三 (138****1234)</td>
                                    <td>@* 订单状态占位 *@ <span class="badge badge-danger">待处理</span></td>
                                    <td>@* 配送地址占位 *@ 北京市朝阳区某某街道</td>
                                    <td>@* 创建时间占位 *@ 09:30</td>
                                    <td>
                                        <a asp-controller="Employee" asp-action="Details" asp-route-id="ORD-20240501-001" class="btn btn-sm btn-primary">@* 处理按钮 *@ 处理</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>@* 订单号占位 *@ #ORD-20240501-002</td>
                                    <td>@* 客户信息占位 *@ 李四 (139****5678)</td>
                                    <td>@* 订单状态占位 *@ <span class="badge badge-warning">配送中</span></td>
                                    <td>@* 配送地址占位 *@ 上海市浦东新区某某路</td>
                                    <td>@* 创建时间占位 *@ 08:15</td>
                                    <td>
                                        <a asp-controller="Employee" asp-action="Details" asp-route-id="ORD-20240501-002" class="btn btn-sm btn-info">@* 查看按钮 *@ 查看</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>@* 订单号占位 *@ #ORD-20240501-003</td>
                                    <td>@* 客户信息占位 *@ 王五 (137****9012)</td>
                                    <td>@* 订单状态占位 *@ <span class="badge badge-success">已完成</span></td>
                                    <td>@* 配送地址占位 *@ 广州市天河区某某大道</td>
                                    <td>@* 创建时间占位 *@ 07:45</td>
                                    <td>
                                        <a asp-controller="Employee" asp-action="Details" asp-route-id="ORD-20240501-003" class="btn btn-sm btn-secondary">@* 详情按钮 *@ 详情</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- 快捷操作 -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">@* 快捷操作标题 *@ 快捷操作</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Employee" asp-action="Orders" class="d-block text-center p-3 bg-primary/5 rounded-lg hover:bg-primary/10 transition-all">
                                <div class="text-primary mb-2">
                                    <i class="fas fa-clipboard-list fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 订单管理链接 *@ 订单管理</h6>
                                <p class="text-sm text-muted">@* 订单管理描述 *@ 查看和处理订单</p>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Employee" asp-action="Operations" class="d-block text-center p-3 bg-info/5 rounded-lg hover:bg-info/10 transition-all">
                                <div class="text-info mb-2">
                                    <i class="fas fa-history fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 操作记录链接 *@ 操作记录</h6>
                                <p class="text-sm text-muted">@* 操作记录描述 *@ 查看历史操作</p>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Employee" asp-action="Earnings" class="d-block text-center p-3 bg-success/5 rounded-lg hover:bg-success/10 transition-all">
                                <div class="text-success mb-2">
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 收益统计链接 *@ 收益统计</h6>
                                <p class="text-sm text-muted">@* 收益统计描述 *@ 查看收益报告</p>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Employee" asp-action="Profile" class="d-block text-center p-3 bg-secondary/5 rounded-lg hover:bg-secondary/10 transition-all">
                                <div class="text-secondary mb-2">
                                    <i class="fas fa-user-cog fa-2x"></i>
                                </div>
                                <h6 class="text-dark">@* 个人设置链接 *@ 个人设置</h6>
                                <p class="text-sm text-muted">@* 个人设置描述 *@ 修改账户信息</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 工作提醒和业绩图表 -->
        <div class="col-lg-4 mb-4">
            <!-- 工作提醒 -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">@* 工作提醒标题 *@ 工作提醒</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-action bg-danger/5 border-left-4 border-danger">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">@* 紧急提醒标题 *@ 有3个订单即将超时</h6>
                                <span class="text-sm text-danger">@* 紧急提醒时间 *@ 30分钟内</span>
                            </div>
                            <p class="text-sm text-muted mb-1">@* 紧急提醒内容 *@ 请尽快处理这些订单以避免客户投诉。</p>
                            <a asp-controller="Employee" asp-action="Orders" class="text-sm text-primary">@* 立即处理链接 *@ 立即处理</a>
                        </div>
                        
                        <div class="list-group-item list-group-item-action bg-warning/5 border-left-4 border-warning">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">@* 注意提醒标题 *@ 需要更新配送信息</h6>
                                <span class="text-sm text-warning">@* 注意提醒时间 *@ 今天</span>
                            </div>
                            <p class="text-sm text-muted mb-1">@* 注意提醒内容 *@ 订单#ORD-20240501-002的配送路线有变化。</p>
                            <a asp-controller="Employee" asp-action="Details" asp-route-id="ORD-20240501-002" class="text-sm text-primary">@* 查看详情链接 *@ 查看详情</a>
                        </div>
                        
                        <div class="list-group-item list-group-item-action bg-info/5 border-left-4 border-info">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">@* 信息提醒标题 *@ 系统维护通知</h6>
                                <span class="text-sm text-info">@* 信息提醒时间 *@ 明天</span>
                            </div>
                            <p class="text-sm text-muted mb-1">@* 信息提醒内容 *@ 系统将于明天凌晨2:00-4:00进行例行维护。</p>
                            <a href="#" class="text-sm text-primary">@* 了解更多链接 *@ 了解更多</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- 业绩概览图表 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@* 本周业绩标题 *@ 本周业绩</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="height: 250px;">
                        <!-- 这里可以集成Chart.js或其他图表库 -->
                        <canvas id="performanceChart"></canvas>
                    </div>
                    <div class="mt-3 text-center">
                        <div class="row">
                            <div class="col-4">
                                <div class="text-sm text-muted">@* 总订单数标题 *@ 总订单</div>
                                <div class="font-bold">@* 总订单数 *@ 45</div>
                            </div>
                            <div class="col-4">
                                <div class="text-sm text-muted">@* 完成率标题 *@ 完成率</div>
                                <div class="font-bold text-success">@* 完成率百分比 *@ 92%</div>
                            </div>
                            <div class="col-4">
                                <div class="text-sm text-muted">@* 平均处理时间标题 *@ 平均处理</div>
                                <div class="font-bold">@* 平均处理时间 *@ 1.5h</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 业绩图表初始化脚本
    document.addEventListener('DOMContentLoaded', function() {
        // 这里可以添加Chart.js图表初始化代码
        console.log('@* 业绩图表初始化注释 *@ 业绩图表初始化');
    });
</script>