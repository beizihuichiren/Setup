@model dynamic
@{    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "收益统计 - 员工工作台";
    ViewData["Breadcrumb"] = new List<object> {
        new { Text = "工作台", Url = "/Employee/Index" },
        new { Text = "收益统计", Url = "/Employee/Earnings", IsActive = true }
    };
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title">
                <h1>收益统计</h1>
                <p class="text-muted">@* 这里是员工收益统计页面，您可以添加收益报表、图表等功能 *@</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>我的收益概览</h3>
        </div>
        <div class="col-md-6 text-right">
            <div class="btn-group">
                <button class="btn btn-secondary">@* 导出报表按钮 *@ 导出报表</button>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <!-- 收益卡片 -->
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">@* 今日收益标题 *@ 今日收益</h5>
                    <p class="card-text display-4">@* 今日收益金额 *@ ¥120.00</p>
                    <p class="text-sm">@* 同比昨日 *@ 较昨日 <span class="text-success">↑10%</span></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h5 class="card-title">@* 本周收益标题 *@ 本周收益</h5>
                    <p class="card-text display-4">@* 本周收益金额 *@ ¥850.00</p>
                    <p class="text-sm">@* 同比上周 *@ 较上周 <span class="text-success">↑5%</span></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">@* 本月收益标题 *@ 本月收益</h5>
                    <p class="card-text display-4">@* 本月收益金额 *@ ¥3,650.00</p>
                    <p class="text-sm">@* 同比上月 *@ 较上月 <span class="text-danger">↓2%</span></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">@* 累计收益标题 *@ 累计收益</h5>
                    <p class="card-text display-4">@* 累计收益金额 *@ ¥28,750.00</p>
                    <p class="text-sm">@* 统计时间 *@ 自入职以来</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>收益趋势图</h4>
                        </div>
                        <div class="col-md-6 text-right">
                            <select class="form-control d-inline-block w-auto">
                                <option value="daily">@* 按日筛选 *@ 按日</option>
                                <option value="weekly">@* 按周筛选 *@ 按周</option>
                                <option value="monthly">@* 按月筛选 *@ 按月</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- 这里可以放置图表，如使用Chart.js -->
                    <div style="height: 300px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                        <p class="text-muted">@* 图表占位符 *@ [收益趋势图将在这里显示]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h4>收益明细</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 日期列 *@ 日期</th>
                        <th>@* 订单号列 *@ 订单号</th>
                        <th>@* 收益类型列 *@ 收益类型</th>
                        <th>@* 收益金额列 *@ 收益金额</th>
                        <th>@* 结算状态列 *@ 结算状态</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示收益明细数据，您可以使用foreach循环遍历明细列表 -->
                    <tr>
                        <td>@* 日期占位符 *@ 2024-01-01</td>
                        <td>@* 订单号占位符 *@ O20240101001</td>
                        <td>@* 类型占位符 *@ 配送提成</td>
                        <td class="text-success">@* 金额占位符 *@ +¥30.00</td>
                        <td><span class="badge badge-warning">@* 状态占位符 *@ 待结算</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>