@model dynamic
@{    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "订单管理 - 员工工作台";
    ViewData["Breadcrumb"] = new List<object> {
        new { Text = "工作台", Url = "/Employee/Index" },
        new { Text = "订单管理", Url = "/Employee/Orders", IsActive = true }
    };
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title">
                <h1>订单管理</h1>
                <p class="text-muted">@* 这里是员工订单管理页面，您可以添加订单列表、搜索、处理等功能 *@</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>订单列表</h3>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@* 搜索订单号或客户信息 *@ 搜索订单号/客户..." />
                </div>
                <div class="col-md-3">
                    <select class="form-control">
                        <option value="">@* 订单状态筛选 *@ 所有状态</option>
                        <option value="Pending">待处理</option>
                        <option value="Processing">处理中</option>
                        <option value="Shipped">已发货</option>
                        <option value="Delivered">已送达</option>
                        <option value="Cancelled">已取消</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" placeholder="@* 日期筛选 *@ 选择日期" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">搜索</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@* 订单号列 *@ 订单号</th>
                        <th>@* 客户信息列 *@ 客户信息</th>
                        <th>@* 产品信息列 *@ 产品信息</th>
                        <th>@* 下单时间列 *@ 下单时间</th>
                        <th>@* 状态列 *@ 状态</th>
                        <th>@* 操作列 *@ 操作</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- 这里将显示订单数据，您可以使用foreach循环遍历订单列表 -->
                    <tr>
                        <td>@* 订单号占位符 *@ O20240101001</td>
                        <td>@* 客户信息占位符 *@ 张三</td>
                        <td>@* 产品信息占位符 *@ 智能手机 x1</td>
                        <td>@* 时间占位符 *@ 2024-01-01 10:30</td>
                        <td>@* 状态占位符 *@ 待处理</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">查看详情</a>
                            <a href="#" class="btn btn-sm btn-success">开始处理</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一页</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一页</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>