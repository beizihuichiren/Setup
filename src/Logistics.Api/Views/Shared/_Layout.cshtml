@{var userName = User?.Identity?.IsAuthenticated == true ? User.Identity!.Name : null;
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
    var isAuthPage = currentPath.Contains("/employee/login") || currentPath.Contains("/station/login") || currentPath.Contains("/employee/register") || currentPath.Contains("/station/register");}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>站点管理员后台</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>
    @if (isAuthPage)
    {
        <div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center p-4">
            <div class="auth-card w-100 max-w-md">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div class="layout">
            <aside class="sidebar">
                <div class="brand">
                    <!-- 品牌Logo占位：请放置 2048x2048 缩略图路径 -->
                    <img class="brand-logo brand-logo-lg" src="<!-- /img/brand/logo.png -->" alt="logo" />
                    <span>站点后台</span>
                </div>
                <nav class="mt-2">
                    <a class="nav-link" href="/station"><i class="bi bi-speedometer2"></i> 仪表盘</a>
                    <a class="nav-link" href="/station/orders"><i class="bi bi-bag-check"></i> 订单</a>
                    <a class="nav-link" href="/station/products"><i class="bi bi-boxes"></i> 商品</a>
                    <a class="nav-link" href="/station/inventory"><i class="bi bi-warehouse"></i> 库存</a>
                    <a class="nav-link" href="/station/aftersales"><i class="bi bi-arrow-repeat"></i> 售后</a>
                </nav>
            </aside>
            <main class="content">
                <header class="topbar">
                    <div class="container-fluid py-2 d-flex justify-content-between align-items-center">
                        <div class="fw-bold">欢迎使用站点运营面板</div>
                        <div class="right">
                            @if (userName == null)
                            {
                                <a class="btn btn-sm btn-outline-primary" href="/station/login">登录</a>
                                <a class="btn btn-sm btn-primary" href="/station/register">注册</a>
                            }
                            else
                            {
                                <!-- 头像占位：站点管理员头像资源路径 -->
                                <img class="avatar" src="<!-- /img/avatar/station-admin.png -->" alt="avatar" />
                                <span class="text-muted">@userName</span>
                                <a class="btn btn-sm btn-outline-secondary" href="/station/logout">退出</a>
                            }
                        </div>
                    </div>
                </header>
                <div class="content-inner">
                    @RenderBody()
                </div>
            </main>
        </div>
    }
</body>
</html>
