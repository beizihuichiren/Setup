@{Layout = null;
    ViewData["Title"] = "页面未找到";
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
    var isAdminPath = currentPath.Contains("/admin");
    var isEmployeePath = currentPath.Contains("/employee");
    var isStationPath = currentPath.Contains("/station");
}<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - 页面未找到</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: var(--light-color);
            color: var(--dark-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .error-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            text-align: center;
            padding: 2rem;
        }
        
        .error-code {
            font-size: 8rem;
            font-weight: 700;
            color: rgba(0, 123, 255, 0.1);
            line-height: 1;
            margin-bottom: 1rem;
        }
        
        .error-message {
            font-size: 1.5rem;
            color: var(--dark-color);
            margin-bottom: 1rem;
            font-weight: 500;
        }
        
        .error-description {
            color: var(--secondary-color);
            max-width: 600px;
            margin-bottom: 2rem;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 0.25rem;
            text-decoration: none;
            transition: all 0.2s ease;
        }
        
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-code">404</div>
        <h1 class="error-message">页面未找到</h1>
        <p class="error-description">
            抱歉，您访问的页面不存在或已被移除。
            @if (User?.Identity?.IsAuthenticated != true) {
                <br />@:请登录后再试。
            }
        </p>
        
        <div class="action-buttons">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                @if (isAdminPath) {
                    <a href="/Admin" class="btn btn-primary">返回管理首页</a>
                } else if (isEmployeePath) {
                    <a href="/Employee" class="btn btn-primary">返回员工首页</a>
                } else if (isStationPath) {
                    <a href="/Station" class="btn btn-primary">返回站点首页</a>
                } else {
                    <a href="/" class="btn btn-primary">返回首页</a>
                }
            }
            else
            {
                @if (isAdminPath) {
                    <a href="/Admin/Login" class="btn btn-primary">前往登录</a>
                } else if (isEmployeePath) {
                    <a href="/Employee/Login" class="btn btn-primary">前往登录</a>
                } else if (isStationPath) {
                    <a href="/Station/Login" class="btn btn-primary">前往登录</a>
                } else {
                    <a href="/" class="btn btn-primary">返回首页</a>
                }
            }
        </div>
    </div>
</body>
</html>